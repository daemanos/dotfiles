# OpenVPN
export OVPN_ROOT=/etc/openvpn
ovpn() {
    sudo openvpn "$OVPN_ROOT/$1.ovpn"
}

# Toilet
toilet_sample() {
    for fontfile in /usr/share/figlet/*; do
        fontname="$(basename ${fontfile%.tlf})"
        echo $fontname
        toilet -f $fontname $1
        echo
    done
}

